span.pull-right.btn-group
  = link_to('编辑', edit_mission_path(@mission), class: ['btn btn-default']) if can?(:edit, @mission)
  = link_to('监督', mission_create_supervision_path(@mission), class: ['btn btn-info'], method: :post) if can?(:supervise, @mission)
  = link_to('确认完成', mission_path(@mission), class: ['btn btn-success']) if can?(:finish, @mission)
  = link_to('返回', :back, class: ['btn btn-warning'])
